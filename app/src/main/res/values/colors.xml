<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools"
    tools:keep="@color/cyber_*,@color/splash_background">
    <!-- ============== CYBERPUNK LIGHT MODE COLORS ============== -->
    <!-- Used for splash screen and XML layouts in light mode -->
    <!-- Note: These are overridden by values-night for dark mode theming -->

    <!-- Primary: Deep Teal (high contrast cyan) -->
    <color name="cyber_primary">#FF00838F</color>
    <color name="cyber_on_primary">#FFFFFFFF</color>

    <!-- Secondary: Deep Magenta -->
    <color name="cyber_secondary">#FFC2185B</color>
    <color name="cyber_on_secondary">#FFFFFFFF</color>

    <!-- Tertiary: Deep Purple -->
    <color name="cyber_tertiary">#FF6200EA</color>
    <color name="cyber_on_tertiary">#FFFFFFFF</color>

    <!-- Background colors for light mode -->
    <color name="cyber_background">#FFFAF8FC</color>
    <color name="cyber_surface">#FFFFFFFF</color>
    <color name="cyber_surface_variant">#FFF3EDF7</color>

    <!-- Text colors for light mode -->
    <color name="cyber_on_background">#FF1C1B1F</color>
    <color name="cyber_on_surface">#FF1C1B1F</color>
    <color name="cyber_on_surface_variant">#FF49454F</color>

    <!-- Error -->
    <color name="cyber_error">#FFBA1A1A</color>
    <color name="cyber_on_error">#FFFFFFFF</color>

    <!-- Splash screen background - light mode uses light purple tint -->
    <color name="splash_background">@color/cyber_background</color>
</resources>
