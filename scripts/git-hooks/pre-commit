#!/bin/sh
# Prevent direct commits to main/master branch
# Forces use of feature branches and pull requests

branch="$(git rev-parse --abbrev-ref HEAD)"

if [ "$branch" = "main" ] || [ "$branch" = "master" ]; then
  echo ""
  echo "â›” COMMIT REJECTED: Direct commits to '$branch' are not allowed."
  echo ""
  echo "Please create a feature branch first:"
  echo "  git checkout -b feature/your-feature-name"
  echo ""
  echo "Then commit your changes and create a pull request."
  echo ""
  exit 1
fi

exit 0
